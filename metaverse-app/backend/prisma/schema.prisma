datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String   @id @default(cuid())
  email            String   @unique
  passwordHash     String?
  profileCompleted Boolean  @default(false)

  fullName   String?
  nik        String?
  birthDate  String?
  address    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  otps      OTP[]
}

model OTP {
  id        String   @id @default(cuid())
  email     String
  code      String
  mode      String   // "register" | "reset"
  expiresAt DateTime
  used      Boolean  @default(false)

  user      User?    @relation(fields: [userId], references: [id])
  userId    String?

  createdAt DateTime @default(now())

  @@index([email, mode])
}
